<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("../partials/head")%>
</head>

<body>
  <%- include("../partials/NavBar")%>
  <div class="container text-light">
    <div class="row">
      <div class="col-md-6 col-lg-3" style="background: #282B30;">
        <div class="d-flex flex-row justify-content-center py-2">
          <div class="rounded-circle img-fluid border border-success mx-2" style="background: url(&quot;assets/img/FiveM_GTAProcess_wqLfPsnO81.jpg&quot;) center / cover no-repeat;max-width: none;width: 6.5rem;height: 6.5rem;"></div>
          <div class="d-flex flex-column justify-content-center mx-2"><span>[Current Nickname]</span><span class="text-muted">[Account Name]</span></div>
        </div>
      </div>
      <div class="col-md-6 col-lg-4" style="background: #222429;">
        <div class="row">
          <div class="col d-flex align-items-center p-1 mb-2"><img class="img-fluid px-2" src="https://upload.wikimedia.org/wikipedia/commons/8/83/Steam_icon_logo.svg" style="width: 3.5rem;" />
            <div>
              <h5 class="m-0">Steam</h5><span class="text-secondary">Currently Playing<br /></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col"><img class="img-fluid rounded shadow" src="https://cdn.akamai.steamstatic.com/steam/apps/892970/header.jpg?t=1639060647" /></div>
          <div class="col d-flex align-items-center p-1">
            <div>
              <h5 class="m-0">Valheim</h5><span class="text-secondary">Iron Gate AB<br /></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col d-flex align-items-center p-1"><span class="span-game-genre">Action</span><span class="span-game-genre">Adventure</span><span class="span-game-genre">Indie</span><span class="span-game-genre">RPG</span><span class="span-game-genre">Early Access</span></div>
        </div>
      </div>
      <div class="col text-light " style="background: #202326;">
        <div class="row">
          <div class="col d-flex justify-content-start align-items-center p-1"><i class="fa fa-spotify text-success px-2" style="font-size: 3rem;"></i>
            <div>
              <h5 class="m-0">Spotify</h5><span id="txtPlaying" class="text-secondary"></span>
            </div>
          </div>
        </div>
        <div class="row m-2">
          <div class="col d-flex justify-content-end">
            <img class="rounded img-fluid img-fluid shadow" id="trackart" src="\img\forever_alone_music_note">
          </div>
          <div class="col d-flex flex-column justify-content-center">
            <a class="text-light fw-bold" id="tracktitle" href="#"></a>
            <a class="text-secondary fw-light" id="trackartist" href="#"></a>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-lg-3 p-1 " style="background: #282B30;">
        <div class="row">
          <div class="col d-flex align-items-center p-1"><img class="img-fluid px-2" src="assets/img/Discord-Logo-Color.svg" style="width: 3.5rem;">
            <div>
              <h5 class="m-0">Discord</h5><span class="text-secondary">Featured Guilds<br></span>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-4 " style="background: #222429;">
        <div class="row">
          <div class="col d-flex align-items-center p-1">
            <div>
              <h6 class="m-0">Recently Played</h6><span class="text-secondary" style="font-size: 14px;">Over the past 2 weeks<br></span>
            </div>
          </div>
        </div>
        <div class="row m-2">
          <div class="col-1 d-flex justify-content-center align-items-center"><a class="text-light fw-bold" href="#">#1</a></div>
          <div class="col d-flex flex-column justify-content-center"><img class="rounded shadow" src="https://media.steampowered.com/steamcommunity/public/images/apps/221100/3520d3db4e282585b24fe28178ca86f54874e3b5.jpg" style="max-width: 184px;max-height: 69px;"><a class="text-light fw-bold" href="#">DayZ</a><a class="text-secondary fw-light" href="#"><span style="text-decoration: underline;">1497&nbsp;</span>over the past two weeks</a><a class="text-secondary fw-light" href="#"><span style="text-decoration: underline;">4560</span>&nbsp;in total</a></div>
        </div>
        <div class="row m-2">
          <div class="col-1 d-flex justify-content-center align-items-center"><a class="text-light fw-bold" href="#">#2</a></div>
          <div class="col d-flex flex-column justify-content-center"><img class="rounded" src="https://media.steampowered.com/steamcommunity/public/images/apps/892970/c00dcd0a5ae87638755e2d68b9c2731d2091770f.jpg" style="max-width: 184px;max-height: 69px;"><a class="text-light fw-bold" href="#">Valheim</a><a class="text-secondary fw-light" href="#">171 over the past two weeks</a><a class="text-secondary fw-light" href="#">113355 in total</a></div>
        </div>
      </div>
      <div class="col" style="background: #202326;">
        <div class="row">
          <div class="col d-flex p-1">
            <div class="d-flex justify-content-center align-items-center rounded shadow mx-2" style="width: 3rem;height: 3rem;padding: 0.5rem;background: rgb(88,16,16);margin-right: 0px;"><img class="img-fluid" src="https://www.last.fm/static/images/footer_logo@2x.49ca51948b0a.png"></div>
            <div>
              <h5 class="m-0">last.fm</h5><span class="text-secondary">Top Tracks<br></span>
            </div>
          </div>
        </div>
        <%lastfmWeeklyTrackChart.forEach(track => {%>
        <div class="row m-2">
          <div class="col-1 d-flex justify-content-center align-items-center">
            <a class="text-light fw-bold" href="">#<%=track["@attr"].rank%></a>
          </div>
          <div class="col-3 d-inline-flex justify-content-center align-items-center">
            <img class="rounded img-fluid img-fluid shadow" src="<%=track.image[2]['#text'];%>">
          </div>
          <div class="col-6 d-flex flex-column justify-content-center">
            <a class="text-light fw-bold" href="#"><%=track.name%></a>
            <a class="text-secondary fw-light" href="#"><%=track.artist['#text']%></a>
          </div>
        </div>
        <%});%>

        <footer class="d-flex justify-content-end"><label class="form-label" style="color: rgba(248,249,250,0.36);text-align: right;font-size: 0.8rem;">Data provided by last.fm with Spotify Connect</label></footer>
      </div>
    </div>
  </div>
  <%- include("../scripts/defaultScripts")%>
  <%- include("../scripts/widgets")%>
</body>

</html>