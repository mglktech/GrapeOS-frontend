<!DOCTYPE html>
<html lang="en">

<%-include("../../partials/head")%>

<body>
    <div class="card textlight bg-dark text-light min-vh-100">
        <div class="card-header d-flex flex-row justify-content-between p-2"><a class="btn btn-secondary shadow"
                role="button" href="<%=referer%>"><i class="fa fa-chevron-left"></i></a></div>
        <div class="card-body p-0">
            <div class="container">
                <div class="d-flex flex-row justify-content-evenly py-2">
                    <div class="d-flex flex-column justify-content-center">
                        <span><%=playerData.name%></span><span class="text-muted"></span></div>
                </div>
                <div>
                    <div><a class="btn btn-info btn-sm d-flex justify-content-center align-items-center"
                            data-bs-toggle="collapse" aria-expanded="false" aria-controls="collapse-1"
                            href="#collapse-1" role="button">Licenses&nbsp;<i class="fa fa-id-card-o"></i></a>
                        <div class="collapse" id="collapse-1">
                            <% playerData.identifiers.forEach((val, key) => {%>
                            <div class="input-group input-group-sm p-1"><span
                                    class="text-light bg-dark bg-gradient border-dark shadow-sm input-group-text"><%=key%></span><input
                                    class="bg-secondary bg-gradient border-dark shadow-sm form-control text-light"
                                    type="text" readonly="" value="<%=val%>"></div>
                            <%});%>

                        </div>
                    </div>
                </div>
                <div class="rounded my-2" style="background: rgb(0,0,0,0.1);">
                    <div class="p-1 border-bottom" style="background: rgb(0,0,0,0.1);">
                        <span class="pl-1"><%=svData.name%></span></div>
                    <div class="p-2"><span class="fw-bold"><%=svData.hrsInFortnite%> hours in the past 2 weeks</span>
                    </div>
                    <div class="p-2"><span class="fw-bold"><%=svData.hrsOnRecord%> hours on record</span></div>
                    <div class="p-2">
                        <div><a class="btn btn-info btn-sm" data-bs-toggle="collapse" aria-expanded="false"
                                aria-controls="collapse-2" href="#collapse-2" role="button">Logs</a>
                            <div class="collapse" id="collapse-2">
                                <% activityData.forEach(day => {%>
                                <div class="bg-dark bg-gradient shadow rounded my-2" id="punch-card"><span
                                        class="d-flex p-2 fw-bold" style="background: rgb(0,0,0,0.1);"><i
                                            class="fa fa-clock-o m-1"></i><%=day.date%></span>
                                    <% day.shifts.forEach(shift => {%>
                                    <div class="text-dark bg-dark border rounded border-dark shadow d-inline-flex flex-row m-1 p-0"
                                        id="punch-content">
                                        <%if(shift.online) {%>
                                        <div class="border rounded border-success d-inline-flex flex-column">
                                            <span class="text-center text-light bg-success bg-gradient"><i
                                                    class="fa fa-user mx-1"></i><%=shift.id%>
                                            </span>
                                            <span
                                                class="text-nowrap text-center text-light bg-success bg-gradient border rounded-pill border-dark px-2 m-1"><%=shift.onlineAt%></span><span
                                                class="text-nowrap text-center text-light bg-info bg-gradient border rounded-pill border-dark px-2 m-1"><%=shift.duration%></span>
                                        </div>
                                        <%} else {%>
                                        <div class="border rounded border-primary d-inline-flex flex-column">
                                            <span class="text-center text-light bg-primary bg-gradient"><i
                                                    class="fa fa-user mx-1"></i><%=shift.id%>
                                            </span>
                                            <span
                                                class="text-nowrap text-center text-light bg-success bg-gradient border rounded-pill border-dark px-2 m-1"><%=shift.onlineAt%></span><span
                                                class="text-nowrap text-center text-light bg-danger bg-gradient border rounded-pill border-dark px-2 m-1"><%=shift.offlineAt%></span><span
                                                class="text-nowrap text-center text-light bg-info bg-gradient border rounded-pill border-dark px-2 m-1"><%=shift.duration%></span>
                                        </div>
                                        <%}%>
                                                    
                                            </div>
                                        <%});%>

                                    </div>
                                    <%})%>



                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>