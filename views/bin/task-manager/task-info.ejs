<html>

    <%-include("../../partials/head")%>
    
<body>
    <div class="card min-vh-100">
        <div class="card-header">
            <h5 class="mb-0 text-dark fw-bold"><%=task.name%></h5>
        </div>
        <div class="card-body">
            <form>
                <div class="row">
                    <div class="col">
                        <input class="form-control my-2" type="text" id="exp" placeholder="Expression" readonly="" value="<%=task.exp%>">
                        <input class="form-control my-2" type="text" id="cmd" placeholder="Command" readonly="" value="<%=task.cmd%>">
                        <div>
                            <h6>Data</h6><textarea class="form-control" id="data" readonly="" rows="5"><%=JSON.stringify(task.data)%></textarea>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="d-flex justify-content-between"><a class="btn btn-secondary btn-lg m-2 text-light" role="button" href="/bin/tasks/view"><i class="fa fa-chevron-left"></i></a><a class="btn btn-danger btn-lg m-2 text-light" role="button" href="/bin/tasks/delete/<%=task._id%>"><i class="fa fa-trash-o"></i></a></div>
    </div>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>