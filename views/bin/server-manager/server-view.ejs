<!DOCTYPE html>
<html lang="en">

<%-include("../../partials/head")%>


<body>
    <div class="card bg-dark min-vh-100">
        <div class="card-header">
            <h5 class="text-secondary mb-0">FiveM Servers</h5>
        </div>
        <div class="card-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col align-items-start">
                        <% servers.forEach(svInfo => {%>
                        <a href="/bin/fiveM/server/get/<%=svInfo._id%>/html">
                            <div class="d-inline-flex flex-column align-items-center p-2" style="cursor: pointer;">
                                <div class="shortcut-icon rounded shadow"
                                    style="background: url('http://servers-live.fivem.net/servers/icon/<%=svInfo.EndPoint%>/<%=svInfo.Data.iconVersion%>.png') center / contain no-repeat;">
                                </div><span
                                    class="text-center shortcut-text"><%=svInfo.Data.vars.get("sv_projectName")%></span>
                            </div>
                        </a>

                        <%})%>
                    </div>
                </div>
            </div>

        </div>
        <hr>
        <div class="d-flex justify-content-end p-3"><a class="btn btn-primary btn-lg" href="/bin/fiveM/server/add"><i
                    class="fa fa-plus"></i></a></div>
    </div>
    <script src="/js/iconCreator.js"></script>
    <script>
    </script>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>

</body>

</html>