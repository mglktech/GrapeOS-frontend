<!DOCTYPE html>
<html lang="en">

<%-include("../../partials/head")%>

<body>
    <div class="card textlight bg-dark text-light min-vh-100">
        <div class="card-header">
            <h5 class="mb-0">Shortcuts</h5>
        </div>
        <div class="card-body p-1">
            <div class="container-fluid">
                <% shortcuts.forEach(shortcut => {%>
                <div class="row">
                    <div class="col d-flex justify-content-between align-items-start">

                        <div class="text-truncate d-flex">
                            <i class="<%=shortcut.icon.data.iconTypeData%> mr-2" style="font-size: 50px;">
                            </i>
                            <div class="d-flex flex-column">
                                <h5 class="m-0"><%=shortcut.name%></h5>
                                <span><%=shortcut._id%></span>
                                <span><%=shortcut.data.winbox.url%></span>
                            </div>

                        </div>

                        <div class="d-flex">
                            <%if(shortcut.data.requireAdmin) {%>
                            <span>Admin</span>
                            <%} if(!shortcut.data.requireAuth) {%>
                            <span>Public</span>
                            <%}%>
                        <form method="post" action="/bin/shortcuts/remove/<%=shortcut._id%>">
                            <button class="btn btn-danger btn-lg m-2 text-light" type="submit"><i
                                    class="fa fa-trash-o"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
                <%});%>
            </div>
            <div class="d-flex flex-row justify-content-center"><a class="btn btn-info btn-lg m-2" role="button"
                    id="btn-add-icon" href="/bin/shortcuts/add"><i class="fa fa-plus"></i></a></div>
        </div>
    </div>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>