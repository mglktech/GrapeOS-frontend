<!DOCTYPE html>
<html lang="en">

    <%-include("../../partials/head")%>

<body>
    <div class="card textlight bg-dark text-light min-vh-100">
        <div class="card-header">
            <h5 class="mb-0">Icons</h5>
        </div>
        <div class="card-body p-1">
            <div class="container-fluid">
                <div class="row">
                    <div class="col align-items-start" id="iconWrapper">
                        
                    </div>
                </div>
            </div>
            <div class="d-flex flex-row justify-content-center"><a class="btn btn-info btn-lg m-2" id="btn-add-icon" href="/bin/icons/add" type="submit"><i class="fa fa-plus"></i></a></div>
        </div>
    </div>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="/js/iconCreator.js"></script>
    <script defer>
    const wrapper = document.getElementById("iconWrapper");
    <% iconGroups.forEach(iconGroup => {%>
        populateIconGroup(<%-JSON.stringify(iconGroup)%>, wrapper);
        <%iconGroup.iconData.forEach(icon => {%>
            document.getElementById("<%=icon._id%>").addEventListener("click", () => {
                window.location = "/bin/files/get/<%=icon._id%>";
        });
        <%})%>
        <%})%>
    </script>
</body>

</html>