<!DOCTYPE html>
<html>
<%-include ("../partials/head.ejs") %>

<body>
    <%-include ("../partials/nav.ejs");%>
    <main class="page">
    <!-- Page Body -->
    <section>
    <!-- Search Bar-->
            <div class="container">
                <div class="row">
                    <div class="col d-flex justify-content-center">
                        <div class="input-group">
                            <div class="dropdown"><button class="rounded-0 rounded-start btn btn-dark dropdown-toggle" aria-expanded="false" data-bs-toggle="dropdown" type="button">Projects</button>
                                <div class="dropdown-menu"><a class="dropdown-item" href="/">Articles</a></div>
                            </div><input class="form-control" type="text" placeholder="Search"><button class="btn btn-light" type="button"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                    <div class="col-12 p-0">
                        <hr>
                    </div>
                </div>
            </div>
            <!-- Projects -->
            <% projects.forEach(project => { %>
            <div class="container p-2" id="project-section">
                <div class="row">
                    <div class="col">
                        <div id="project-headerImg" class="photo-responsive" style="background: url(<%=project.headerImage%>) center / cover;"></div>
                    </div>
                    <div class="col">
                        <div class="section-info" style="border-left-color: var(--bs-purple);">
                            <div class="d-flex flex-row p-2">
                                <div class="col">
                                    <h3 id="project-title"><%=project.title%></h3>
                                </div>
                                <div class="col d-flex flex-column align-items-end">
                                    <div><span>Started:&nbsp;</span><span id="project-dateCreated"><%=project.createdAt%></span></div>
                                    <div><span>Updated:&nbsp;</span><span id="project-dateUpdated"><%=project.updatedAt%></span></div>
                                </div>
                            </div>
                            <hr class="hr-purple">
                            <div class="p-2">
                                <div class="d-flex flex-row">
                                    <p id="project-subtitle"><%=project.subtitle%></p>
                                </div>
                                <div class="d-flex flex-row justify-content-between align-items-center"><a class="btn btn-dark" role="button" id="project-view">View Articles</a>
                                    <div><span id="project-noArticles">--</span><span>&nbsp;Articles</span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </section>
    </main>
    <%-include ("../partials/foot.ejs") %>
    <%-include ("../partials/scripts.ejs")%>
    <script>
        
    
    </script>
</body>

</html>